; COLORS
[colors]
; can't inherit with transparency, 60% transparency
background = #99011627
focused = #011627
foreground = ${xrdb:foreground}
empty = #4dd6deeb
urgent = ${xrdb:color12}

; BARS

[bar/base]
width = 100%
height = 30
offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 2
underline-color = ${colors.foreground}

padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

font-0 = Noto Sans:size=10;0
font-1 = Fura Code Nerd Font:size=10;1

;tray-position = right
;tray-padding = 2
;tray-background = #66333333

wm-restack = bspwm

[bar/primary]
inherit = bar/base
monitor = DP-2

modules-left = bspwm_ind
modules-center = bspwm
; modules-right = battery volume mpd date
modules-right = lan volume date

[bar/secondary]
inherit = bar/base
monitor = DP-0.8

modules-left = bspwm_ind
modules-center = bspwm
modules-right = date

[bar/laptop]
inherit = bar/base
monitor = eDP1

modules-left = bspwm_ind
modules-center = bspwm
modules-right = wlan volume backlight battery date
; modules-right = battery volume mpd date

