#! /bin/sh

# laptop specific setup
if xrandr | grep "eDP1 connected"; then
    xrandr --output eDP1 --mode 1920x1080 --pos 0x0 --rotate normal --output DP1 --off --output HDMI1 --off --output VIRTUAL1 --off

    xwallpaper --output 'eDP1' --zoom '/home/iynaix/Pictures/Wallpapers/balloons_1920.png'

    # remap caps lock to mod tap Esc and Super
    xmodmap ~/.xmodmap
    xcape -e 'Super_R=Escape' -t 200

# desktop specific setup
else
    # triple screen
    if xrandr | grep "HDMI-0 connected"; then
        xrandr --output DP-0.8 --mode 2560x1440 --pos 0x728 --rotate left --output DVI-D-0 --off --output HDMI-0 --mode 1920x1080 --pos 1754x0 --output DP-0 --off --output DP-1 --off --output DP-2 --primary --mode 3840x1600 --rate 144 --pos --pos 1440x1080 --rotate normal --output DP-3 --off --output DP-4 --off --output DP-5 --off

        xwallpaper --output 'DP-2' --zoom '/home/iynaix/Pictures/Wallpapers/balloons_3440.png' --output 'DP-0.8' --zoom '/home/iynaix/Pictures/Wallpapers/balloons_2560.png' --output 'HDMI-0' --zoom '/home/iynaix/Pictures/Wallpapers/balloons_1920.png'
    # dual screen
    else
        xrandr --output DP-0.8 --mode 2560x1440 --pos 0x0 --rotate left --output DVI-D-0 --off --output HDMI-0 --off --output DP-0 --off --output DP-1 --off --output DP-2 --primary --mode 3440x1440 --pos 1440x258 --rotate normal --output DP-3 --off --output DP-4 --off --output DP-5 --off

        xwallpaper --output 'DP-2' --zoom '/home/iynaix/Pictures/Wallpapers/balloons_3440.png' --output 'DP-0.8' --zoom '/home/iynaix/Pictures/Wallpapers/balloons_2560.png'
    fi
fi
