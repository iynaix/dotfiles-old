#!/usr/bin/bash

# forces only a single instance of mpv to be opened

wid=$(xdotool search --class mpv)

# echo "1: $1, 2: $2"

case "$1" in
    open)
        # replace current playing file
        if [ $wid ]; then
            cmd=$( jq -n \
                --arg fname "$2" \
                '{command: ["loadfile", $fname, "replace"]}' )

            echo $cmd | socat - /tmp/mpvsocket

            # focus existing mpv window
            bspc node --focus $wid
        else
            # open new instance
            mpv --no-terminal --no-pause -- "$2"
        fi
        ;;

    play)
        # always play
        if [ $wid ]; then
            cmd=$( jq -n \
                '{command: ["set_property", "pause", false]}' )

            echo $cmd | socat - /tmp/mpvsocket
        fi
        ;;

    pause)
        # always pause
        if [ $wid ]; then
            cmd=$( jq -n \
                '{command: ["set_property", "pause", true]}' )

            echo $cmd | socat - /tmp/mpvsocket
        fi
        ;;

    playpause)
        # toggle pause
        if [ $wid ]; then
            cmd=$( jq -n \
                '{command: ["cycle", "pause"]}' )

            echo $cmd | socat - /tmp/mpvsocket
        fi
        ;;

    smartpause)
        # TODO: pause if mpv window is not visible
        if [ $wid ]; then
            cmd=$( jq -n \
                '{command: ["set_property", "pause", true]}' )

            echo $cmd | socat - /tmp/mpvsocket
        fi
        ;;

    seek)
        if [ $wid ]; then
            cmd=$( jq -n \
                --arg sk "$2"
                '{command: ["seek", $2]}' )

            echo $cmd | socat - /tmp/mpvsocket
        fi
        ;;
esac
